<?xml version="1.0"?>

<launch>
  <arg name="slam_type" default="gmapping" doc="slam_type [hector_mapping, gmapping]"/>
  <arg name="sim_time" default="true" doc="sim_time [true, false]"/>
  
  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>

  <param name="/use_sim_time" value="$(arg sim_time)"/>
    
  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find kamu_robotu_launch)/rviz_cfg/mapping_demo.rviz"/> 

  <include file="$(find kamu_robotu_launch)/launch/oko_$(arg slam_type).launch"/>

  <include file="$(find hector_geotiff)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(arg geotiff_map_file_path)"/>
  </include>

</launch>
